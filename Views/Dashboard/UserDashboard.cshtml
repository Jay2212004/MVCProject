@model List<MVC_Task.Models.Documents>

@{
    ViewData["Title"] = "My Documents";
}

<h3 class="text-center mt-3">My Documents</h3>

<div class="text-end me-4 mt-3">
    <a href="/Account/Logout" class="btn btn-danger">Logout</a>
</div>

<table class="table table-bordered w-75 mx-auto mt-3">
    <thead class="table-dark">
        <tr>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.FileName</td>
                <td>
                    <a class="btn btn-sm btn-info" href="@doc.FilePath" target="_blank">View</a>
                    <a class="btn btn-sm btn-success" href="/Documents/Download/@doc.DocId">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
