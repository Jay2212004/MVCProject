@model Role

@{
    ViewData["Title"] = "Edit Role";
}

<h2 class="text-center mt-4">Edit Role</h2>

<form method="post" class="container mt-4" style="max-width: 600px;">
    <div class="mb-3">
        <label class="form-label">Role ID</label>
        <input type="text" class="form-control" asp-for="RoleId" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Role Name</label>
        <input type="text" class="form-control" asp-for="RoleName" required />
    </div>

    <button type="submit" class="btn btn-primary w-100">Update</button>
</form>
