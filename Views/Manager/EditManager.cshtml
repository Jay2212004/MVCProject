@model Manager

@{
    ViewData["Title"] = "Edit Manager";
}

<h2 class="text-center mt-4">Edit Manager</h2>

<form method="post" class="container mt-4" style="max-width: 500px;">
    <div class="mb-3">
        <label class="form-label">Manager ID</label>
        <input type="text" class="form-control" asp-for="Mid" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Manager Name</label>
        <input type="text" class="form-control" asp-for="Mname" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department" required />
    </div>
    <button type="submit" class="btn btn-primary w-100">Save</button>
</form>
