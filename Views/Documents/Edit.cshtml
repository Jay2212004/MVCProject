@model MVC_Task.Models.Documents

@{
    ViewData["Title"] = "Edit Document";
}

<h3 class="text-center mt-3">Edit Document</h3>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="w-50 mx-auto border p-4">
    <input type="hidden" asp-for="DocId" />

    <div class="mb-3">
        <label class="form-label">Select Employee</label>
        <select asp-for="EmpId" asp-items="@ViewBag.emps" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New File (optional)</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Update</button>
</form>
